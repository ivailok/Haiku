    ViewBag.Title = "Haiku";
    ViewBag.HeaderPhrase = "Your thoughts are valued!";
}

<div class="container" ng-view></div>

@section scripts {
    @Scripts.Render("~/bundles/angular")

    @Scripts.Render("~/Scripts/app/app.js")
    
    @Scripts.Render("~/Scripts/app/controllers/side-bar-controller.js")
    @Scripts.Render("~/Scripts/app/controllers/rate-controller.js")
    @Scripts.Render("~/Scripts/app/controllers/report-controller.js")
    @Scripts.Render("~/Scripts/app/controllers/authorize-controller.js")
    @Scripts.Render("~/Scripts/app/controllers/haikus-controller.js")
    @Scripts.Render("~/Scripts/app/controllers/haiku-controller.js")
    @Scripts.Render("~/Scripts/app/controllers/users-controller.js")
    @Scripts.Render("~/Scripts/app/controllers/user-controller.js")
    @Scripts.Render("~/Scripts/app/controllers/haiku-write-controller.js")
    @Scripts.Render("~/Scripts/app/controllers/user-register-controller.js")
    @Scripts.Render("~/Scripts/app/controllers/haiku-edit-controller.js")
    
