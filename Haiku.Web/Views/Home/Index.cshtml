@{
    ViewBag.Title = "Haiku";
}

<div class="collapse navbar-collapse" ng-controller="HeaderController">
    <ul class="nav navbar-nav">
        <li ng-class="{ active: isActive('/')}"><a href="/">Haikus</a></li>
        <li ng-class="{ active: isActive('/users')}"><a href="/users">Users</a></li>
    </ul>
</div>
<hr class="divider"/>
<div class="container" ng-view></div>

@section scripts {
    @Scripts.Render("~/Scripts/angular.min.js")
    @Scripts.Render("~/Scripts/angular-route.min.js")

    @Scripts.Render("~/Scripts/app/app.js")

    @Scripts.Render("~/Scripts/app/services/haikus-service.js")
    @Scripts.Render("~/Scripts/app/services/users-service.js")
    
    @Scripts.Render("~/Scripts/app/controllers/header-controller.js")
    @Scripts.Render("~/Scripts/app/controllers/haikus-controller.js")
    @Scripts.Render("~/Scripts/app/controllers/users-controller.js")
    
    @Scripts.Render("~/Scripts/app/routing.js")
}